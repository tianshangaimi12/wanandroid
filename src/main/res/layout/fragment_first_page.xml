<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:index="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="5dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="5dp">

    <android.support.v4.view.ViewPager
        android:padding="3dp"
        android:id="@+id/vp_banner"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:background="@drawable/shape_vp_background"/>
    <com.example.wanandroid.view.ViewPagerIndex
        android:id="@+id/vp_index_banner"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="170dp"
        index:index_color="@color/colorMain"
        index:index_distance="6dp"
        index:index_length="2dp" />
    <android.support.v7.widget.RecyclerView
        android:layout_marginTop="10dp"
        android:id="@+id/rlv_first_page_news"
        android:layout_below="@id/vp_banner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</RelativeLayout>